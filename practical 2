#include<stdio.h>

void main(){
int i,n;
printf("Enter no = ");
scanf("%d",&n);

for(i=1;i<=n;i++){
printf("%d\n",i);
}
}

for_loop
#include<stdio.h>

void main(){
int n;
printf("Enter no = ");
scanf("%d",&n);
if(n%2==0){
printf("Even\n");
}else{
printf("Odd\n");
}
}

while_loop 
#include<stdio.h>

void main(){
int i=1,n,sum;

printf("Enter no = ");
scanf("%d",&n);

while(i<=n){
sum=sum+i;
i++;
}
printf("Sum = %d\n",sum);
}
